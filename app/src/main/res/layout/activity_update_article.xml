<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".UpdateArticleActivity">

    <TextView
        android:id="@+id/updateArticleHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Update Article"
        />

    <ImageView
        android:id="@+id/updateSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_check_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/updateArticleHeading"
        android:layout_marginEnd="0dp" />

    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Edit Title"
        android:padding="12dp"
        android:layout_below="@id/updateArticleHeading"
        android:background="@drawable/boarder"
        android:layout_marginTop="16dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/updateContentEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Start editing your article."
        android:padding="12dp"
        android:layout_below="@id/updateTitleEditText"
        android:background="@drawable/boarder"
        android:layout_marginTop="16dp"
        android:gravity="top"
        />

</RelativeLayout>